<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ef4e74</item>
    </style>
    <style name="CustomStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="NewAppTheme" parent="Theme.AppCompat.Light">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#d0d247</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/actionBar_background</item>

        <!--   theme UI controls like checkboxes and text fields -->
        <!--   native widgets will now be "tinted" with accent color -->
        <item name="colorAccent">@color/colorAccent</item>

        <!--Action bar style-->
        <item name="android:actionBarStyle">@style/NewAppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/NewAppTheme.ActionBar</item>

    </style>

    <style name="NewAppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/NewAppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/NewAppTheme.ActionBar.TitleText</item>
        <item name="android:height">40dp</item>
        <item name="height">40dp</item>
        <item name="android:background">@color/actionBar_background</item>
        <item name="background">@color/actionBar_background</item>
    </style>

    <style name="NewAppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#f50404</item>
    </style>
</resources>
