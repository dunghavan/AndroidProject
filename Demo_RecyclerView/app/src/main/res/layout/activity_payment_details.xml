<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dung.demo_recyclerview.Activity_Payment_Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp">
        
        <TextView
            android:id="@+id/textview_tongSoMon_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số món: 0"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textview_tongSoTien_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng thanht toán: 0đ"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textview_ngayLap_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày lập: 0000-00-00"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textview_ngayGiaoHang_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày giao hàng: 0000-00-00"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textview_diaChiGiaoHang_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao: "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textview_SDT_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textview_hinhThucThanhToan_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình thức thanh toán: "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textview_PaypalID_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayPal ID: "
            android:textSize="18sp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textview_danhSachMonAn_in_payment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách các món: "
            android:textSize="18sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_to_append_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>
