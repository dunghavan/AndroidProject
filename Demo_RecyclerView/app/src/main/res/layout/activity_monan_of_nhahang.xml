<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/php_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_nhahang_in_nhahang_detail"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/tv_tennhahang_in_nhahang_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhà hàng: nhà hàng 123"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/tv_diachi_in_nhahang_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Dĩ An - Bình Dương"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/tv_giomocua_in_nhahang_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ mở cửa: 7h00 - 21h00"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tabLayout_monan_of_nhahang"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_monan_of_nhahang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout" />

</LinearLayout>