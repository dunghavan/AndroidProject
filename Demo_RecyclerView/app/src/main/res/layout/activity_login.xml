<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa đăng nhập"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập với Facebook hoặc Google để tiếp tục"
            android:layout_gravity="center_horizontal"/>
        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_login_button"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />
        <Button
            android:id="@+id/google_logout_button"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Đăng xuất tài khoản Google"
            android:background="#f48f42"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/google_revoke_access_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revoke access"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
