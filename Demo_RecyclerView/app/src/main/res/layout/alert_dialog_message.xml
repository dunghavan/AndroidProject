<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên của bạn: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/textview_name_in_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hà Văn Dũng"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/textview_sdt_in_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01684569826"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/textview_email_in_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dunghavan@gmail.com"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textview_tenmonan_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lời nhắn của bạn: "
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/textview_message_in_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>