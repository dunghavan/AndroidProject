<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_username_in_cart_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên khách hàng: "
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textview_soluongmon_in_cart_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng món: "
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textview_tongtien_in_cart_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: "
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    //line
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--RecyclerView-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_in_cart_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linearLayout_for_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#139ce6">

        <Button
            android:id="@+id/back_btn_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/tiep_tuc_chon_mon"
            android:layout_weight="0.4"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/login_btn_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dang_nhap"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:textAllCaps="false"
            android:textStyle=""
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/next_btn_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tiep_theo"
            android:layout_gravity="right"
            android:layout_weight="0.3"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>
    </LinearLayout>


</LinearLayout>