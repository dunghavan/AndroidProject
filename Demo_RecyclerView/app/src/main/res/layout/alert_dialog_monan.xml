<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageview_monan_in_dialog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/textview_tenmonan_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên món ăn"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textview_tennhahang_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nhà hàng"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_gia_in_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000đ"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColor="#893e07"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/textview_giakhuyenmai_in_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000đ"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:textColor="#893e07"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/textview_khuyenmai_in_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:textColor="#179e05"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/textview_mota_monan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginRight="20dp"
        android:text="Cừu băm xào tôm là món ăn bổ dưỡng kết hợp thịt cừu và tôm tươi. Vị ngọt bùi thơm ngon từ tôm kết hợp cùng vị mềm mại, ngọt thanh từ miếng thịt cừu sẽ khiến thực khách ngất ngây với hương vị tan ra nơi đầu lưỡi.">
    </TextView>
    <TextView
        android:id="@+id/textview_nangluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#116606"
        android:text="Năng lượng: 200">
    </TextView>
    <TextView
        android:id="@+id/textview_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#116606"
        android:text="Protein: 300">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_tongtien_in_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:textColor="#890606"
            android:text="50000đ">
        </TextView>
        <ImageButton
            android:id="@+id/btn_minus_in_dialog"
            android:src="@drawable/ic_minus"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/rounded_button"
            android:layout_height="20dp"
            android:layout_width="20dp"/>
        <TextView
            android:id="@+id/textview_soluongdat_in_dialog"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/round_textview"
            android:layout_width="35dp"
            android:layout_height="20dp" />
        <ImageButton
            android:id="@+id/btn_plus_in_dialog"
            android:src="@drawable/ic_plus"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:layout_height="20dp"
            android:layout_width="20dp"/>
    </LinearLayout>

</LinearLayout>